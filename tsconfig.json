{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "lib-es5",
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["lib/**/*", "typings/**/*"]
}
